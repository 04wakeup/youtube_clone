mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src, controls=false)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up 
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play 
            .videoPlayer__column
                input.videoPlayer_running#jsRunningTime(type="range", min="0", max="100", step="0.1", value="0")
            .videoPlayer__column
                span
                    span#currentTime 00:00:00
                    span / 
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsBackward
                    i.fas.fa-arrow-left
            .videoPlayer__column
                span#jsForward
                    i.fas.fa-arrow-right
            .videoPlayer__column
                span#jsSettings
                    i.fas.fa-cog
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand