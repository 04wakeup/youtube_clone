extends layouts/main
include mixins/videoBlock

block content
    .user-profile 
        .user-profile__header
            if user.avatarUrl 
                img.u-avatar(src=`${user.avatarUrl && user.avatarUrl.includes("http") ? user.avatarUrl : `/${user.avatarUrl}` }`)
            else 
                img.u-avatar(src="https://jameswetube2.s3-us-west-2.amazonaws.com/avatar/noImage.png")
            h4.profile__username=user.name 
        if loggedUser && (user.id === loggedUser.id) 
            .user-profile__btns 
                a(href=`/users${routes.editProfile}`)
                    button üñç Edit Profile
                a(href=`/users${routes.changePassword}`)
                    button üîë Change Password
        .user-videos 
            each item in user.videos
                +videoBlock({
                    id: item.id,
                    title: item.title,
                    views: item.views,
                    videoFile: item.fileUrl
                })